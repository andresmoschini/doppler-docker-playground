@page
@model IndexModel
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
	<meta name="title" content="Doppler Docker Playground" />
	<title>Doppler Docker Playground</title>
</head>
<body>
	<h1>Doppler Docker Playground</h1>


    <h2>ServerStatus</h2>
    <dl>
        <dt>MachineName</dt>
        <dd>@(Model.ServerStatus.MachineName)</dd>
        <dt>GetHostName</dt>
        <dd>@(Model.ServerStatus.GetHostName)</dd>
        <dt>ServerId</dt>
        <dd>@(Model.ServerStatus.ServerId)</dd>
        <dt>ServerCounter</dt>
        <dd>@(Model.ServerStatus.GetAndIncrementCounter())</dd>
        <dt>AspNetCoreEnvironment</dt>
        <dd>@(Model.ServerStatus.AspNetCoreEnvironment)</dd>
        <dt>Environment (from environment values)</dt>
        <dd>@(Model.ServerStatus.Environment)</dd>
        <dt>Environment (from configuration)</dt>
        <dd>@(Model.EnvironmentFromConfiguration)</dd>
    </dl>

    <h2>PlaygroundSettings</h2>
    <dl>
        <dt>BaseSetting</dt>
        <dd>@(Model.PlaygroundSettings?.BaseSetting)</dd>
        <dt>OverrideSetting</dt>
        <dd>@(Model.PlaygroundSettings?.OverrideSetting)</dd>
        <dt>SecretSetting</dt>
        <dd>@(Model.PlaygroundSettings?.SecretSetting)</dd>
        <dt>AnotherSecretSetting</dt>
        <dd>@(Model.PlaygroundSettings?.AnotherSecretSetting)</dd>
    </dl>

    <h2>All configuration entries</h2>
    @foreach (var entry in Model.ConfigurationEntries)
    {
        <dl>
            <dt>@entry.Key</dt>
            <dd>@entry.Value</dd>
        </dl>
    }
</body>
</html>
